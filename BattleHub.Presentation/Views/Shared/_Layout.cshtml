@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "BattleHub";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - BattleHub</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bh-body">
    <div class="bh-topbar">
        <button id="bh-burger" class="bh-burger" aria-label="Abrir menu"><span></span></button>
        <a asp-controller="Torneios" asp-action="Index" class="bh-brand-link">BattleHub</a>
        <div style="width:40px"></div>
    </div>
    <div class="bh-app">
        <aside class="bh-sidebar">
            <div class="bh-brand">
                <a asp-controller="Torneios" asp-action="Index" class="bh-brand-link">BattleHub</a>
            </div>
            <nav class="bh-nav">
                <a class="bh-nav-link" asp-controller="Torneios" asp-action="Index">Torneios</a>
                <a class="bh-nav-link" asp-controller="Participantes" asp-action="Index">Participantes</a>
            </nav>
            <div class="bh-sidebar-footer">Â© @DateTime.Now.Year</div>
        </aside>

        <div class="bh-main">
            @if (TempData["ok"] is string msg)
            {
                <div class="bh-alert bh-alert-success">@msg</div>
            }

            <main class="bh-container">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
