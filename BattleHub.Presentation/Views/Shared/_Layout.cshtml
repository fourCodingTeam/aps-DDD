@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "BattleHub";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - BattleHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
            <a class="navbar-brand" asp-controller="Torneios" asp-action="Index">BattleHub</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Torneios" asp-action="Index">Torneios</a>
                <a class="nav-link" asp-controller="Participantes" asp-action="Index">Participantes</a>
            </div>
        </nav>
        @if (TempData["ok"] is string msg)
        {
            <div class="alert alert-success text-center m-0 rounded-0">@msg</div>
        }
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
