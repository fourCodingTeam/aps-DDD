@model BattleHub.Application.ViewModels.ParticipanteViewModel
@{
    ViewData["Title"] = "Editar Participante";
}

<h2 class="m-0">Editar Participante</h2>

<form asp-action="Edit" method="post" class="mt-16" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="bh-field">
        <label asp-for="Nome" class="bh-label"></label>
        <input asp-for="Nome" class="bh-input" />
        <span asp-validation-for="Nome" class="bh-error"></span>
    </div>

    <div class="bh-field">
        <label asp-for="Email" class="bh-label"></label>
        <input asp-for="Email" class="bh-input" />
        <span asp-validation-for="Email" class="bh-error"></span>
    </div>

    <div class="bh-stack mt-16">
        <button type="submit" class="bh-btn bh-btn-primary">Salvar</button>
        <a asp-action="Index" class="bh-btn bh-btn-secondary">Voltar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
