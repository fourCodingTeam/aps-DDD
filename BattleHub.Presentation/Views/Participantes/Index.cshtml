@model IEnumerable<BattleHub.Application.ViewModels.ParticipanteViewModel>
@{
    ViewData["Title"] = "Participantes";
}

<h2>Participantes</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Participante</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Email</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@p.Id">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
