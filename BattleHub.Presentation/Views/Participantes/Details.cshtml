@model BattleHub.Application.ViewModels.ParticipanteViewModel
@{
    ViewData["Title"] = "Detalhes do Participante";
}

<h2>@Model.Nome</h2>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>

<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
</p>
