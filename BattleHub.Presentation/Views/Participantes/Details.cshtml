@model BattleHub.Application.ViewModels.ParticipanteViewModel
@{
    ViewData["Title"] = "Detalhes do Participante";
}

<h2 class="m-0">@Model.Nome</h2>

<div class="bh-card mt-16">
  <div class="bh-card-body">
    <div class="bh-details-grid">
      <div>
        <div class="text-muted">Nome</div>
        <div>@Model.Nome</div>
      </div>
      <div>
        <div class="text-muted">Email</div>
        <div>@Model.Email</div>
      </div>
    </div>
  </div>
</div>

<div class="bh-stack mt-16">
  <a class="bh-btn bh-btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
  <a class="bh-btn bh-btn-secondary" asp-action="Index">Voltar</a>
</div>
