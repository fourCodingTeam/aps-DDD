@model BattleHub.Application.ViewModels.TorneioViewModel
@{
    ViewData["Title"] = "Editar Torneio";
}

<h2 class="m-0">Editar Torneio</h2>

<form asp-action="Edit" method="post" class="mt-16" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="bh-field">
        <label asp-for="Nome" class="bh-label"></label>
        <input asp-for="Nome" class="bh-input" />
        <span asp-validation-for="Nome" class="bh-error"></span>
    </div>

    <div class="bh-field">
        <label asp-for="TamanhoChave" class="bh-label"></label>
        <select asp-for="TamanhoChave" class="bh-select">
            <option>4</option>
            <option>8</option>
            <option>16</option>
            <option>32</option>
        </select>
        <span asp-validation-for="TamanhoChave" class="bh-error"></span>
    </div>

    <div class="bh-field">
        <label asp-for="DataInicio" class="bh-label"></label>
        <input asp-for="DataInicio" type="date" class="bh-input" />
        <span asp-validation-for="DataInicio" class="bh-error"></span>
    </div>

    <div class="bh-field">
        <label asp-for="DataFim" class="bh-label"></label>
        <input asp-for="DataFim" type="date" class="bh-input" />
        <span asp-validation-for="DataFim" class="bh-error"></span>
    </div>

    <div class="bh-stack mt-16">
        <button type="submit" class="bh-btn bh-btn-primary">Salvar</button>
        <a asp-action="Index" class="bh-btn bh-btn-secondary">Voltar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
