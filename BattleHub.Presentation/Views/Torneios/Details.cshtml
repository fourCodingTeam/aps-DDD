@model BattleHub.Application.ViewModels.TorneioViewModel
@{
	ViewData["Title"] = "Detalhes do Torneio";
}
<h2 class="m-0">@Model.Nome</h2>
<div class="bh-card mt-16 mb-24">
    <div class="bh-card-body">
        <div class="bh-details-grid">
            <div>
                <div class="text-muted">Tamanho</div>
                <div>@Model.TamanhoChave</div>
            </div>
            <div>
                <div class="text-muted">In√≠cio</div>
                <div>@Model.DataInicio.ToString("dd/MM/yyyy")</div>
            </div>
            <div>
                <div class="text-muted">Fim</div>
                <div>@Model.DataFim.ToString("dd/MM/yyyy")</div>
            </div>
            <div>
                <div class="text-muted">Estado</div>
                <div><span class="bh-badge">@Model.Estado</span></div>
            </div>
        </div>
    </div>
</div>
<div class="bh-stack mt-16">
	<a class="bh-btn bh-btn-primary"
	   asp-controller="Inscricoes"
	   asp-action="Create"
	   asp-route-torneioId="@Model.Id">
		Inscrever Participante
	</a>

	<form asp-action="Publicar" method="post" style="display:inline">
		<input type="hidden" name="id" value="@Model.Id" />
		<button type="submit" class="bh-btn bh-btn-secondary">Publicar Torneio</button>
	</form>

	<a class="bh-btn bh-btn-orange"
	   asp-controller="Partidas"
	   asp-action="Index"
	   asp-route-torneioId="@Model.Id">
		Ver Partidas
	</a>
</div>

<h3 class="mt-24">Participantes</h3>
@{
    var participantes = ViewBag.Participantes as IEnumerable<BattleHub.Application.ViewModels.ParticipanteViewModel> ?? System.Linq.Enumerable.Empty<BattleHub.Application.ViewModels.ParticipanteViewModel>();
}
<div class="bh-card">
    <div class="bh-card-body">
        @if (participantes.Any())
        {
            <div class="bh-table-wrap">
                <table class="bh-table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in participantes)
                        {
                            <tr>
                                <td>@p.Nome</td>
                                <td class="text-muted">@p.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-muted">Nenhum participante inscrito ainda.</div>
        }
    </div>
</div>

@if (TempData["erro"] is string erro)
{
	<div class="bh-alert mt-16">@erro</div>
}

<div class="bh-stack mt-16">
	<a class="bh-btn bh-btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
	<a class="bh-btn bh-btn-secondary" asp-action="Index">Voltar</a>
</div>
