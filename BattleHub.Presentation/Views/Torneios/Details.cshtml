@model BattleHub.Application.ViewModels.TorneioViewModel
@{
	ViewData["Title"] = "Detalhes do Torneio";
}
<h2>@Model.Nome</h2>
<dl class="row">
	<dt class="col-sm-2">Tamanho</dt>
	<dd class="col-sm-10">@Model.TamanhoChave</dd>
	<dt class="col-sm-2">Início</dt>
	<dd class="col-sm-10">@Model.DataInicio:dd/MM/yyyy</dd>
	<dt class="col-sm-2">Fim</dt>
	<dd class="col-sm-10">@Model.DataFim:dd/MM/yyyy</dd>
	<dt class="col-sm-2">Estado</dt>
	<dd class="col-sm-10">@Model.Estado</dd>
</dl>
<p class="mt-3 d-flex gap-2">
	<a class="btn btn-success"
	   asp-controller="Inscricoes"
	   asp-action="Create"
	   asp-route-torneioId="@Model.Id">
		Inscrever Participante
	</a>

	<form asp-action="Publicar" method="post" class="d-inline">
		<input type="hidden" name="id" value="@Model.Id" />
		<button type="submit" class="btn btn-primary">Publicar Torneio</button>
	</form>
</p>

@if (TempData["erro"] is string erro)
{
	<div class="alert alert-danger mt-2">@erro</div>
<p>
	<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
	<a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
</p>

}