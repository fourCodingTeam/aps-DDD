@model IEnumerable<BattleHub.Application.ViewModels.TorneioViewModel>
@{
    ViewData["Title"] = "Torneios";
}
<h2>Torneios</h2>
<p><a class="btn btn-primary" asp-action="Create">Novo Torneio</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tamanho</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Nome</td>
                <td>@t.TamanhoChave</td>
                <td>@t.DataInicio.ToString("dd/MM/yyyy")</td>
                <td>@t.DataFim.ToString("dd/MM/yyyy")</td>
                <td>@t.Estado</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@t.Id">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@t.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@t.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
