@{
    ViewData["Title"] = "Inscrever Participante";
}
<h2 class="m-0">Inscrever Participante</h2>

@if (TempData["erro"] is string erro)
{
    <div class="bh-alert">@erro</div>
}

<form asp-action="Create" method="post" class="mt-16" novalidate>
    <div class="bh-field">
        <label class="bh-label">Torneio</label>
        <select name="torneioId" class="bh-select" asp-items="ViewBag.Torneios"></select>
    </div>

    <div class="bh-field">
        <label class="bh-label">Participante</label>
        <select name="participanteId" class="bh-select" asp-items="ViewBag.Participantes"></select>
    </div>

    <div class="bh-stack mt-16">
        <button type="submit" class="bh-btn bh-btn-primary">Inscrever</button>
        <a asp-controller="Torneios" asp-action="Index" class="bh-btn bh-btn-secondary">Voltar</a>
    </div>
</form>
